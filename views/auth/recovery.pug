extends ../layout/index

block contenido
 
 .py-10
    h2.text-center.text-6xl.font-extrabold Bienes
        span.font-normal Raices
    h2.text-center.text-4xl.font-extrabold.mt-10= pagina 

    .mt-12.mx-auto.max-w-md  
        .bg-white.py-8.px-4.shadow
            form.space-y-4
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Ingresa Email
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa correo" type="email" name="email")
                div.flex.items-center.justify-between 
                    a.text-gray-400.text-xs(href="/auth/register") Crear cuenta
                    a.text-gray-400.text-xs(href="/auth/login") ¿Tienes cuenta? Iniciar Sesión
                input(class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-3 rounded-xl border-gray-900" type="submit" value="Recuperar")