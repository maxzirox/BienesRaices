extends ../layout/index

block contenido
 
 .py-10
    h2.text-center.text-6xl.font-extrabold Bienes
        span.font-normal Raices
    h2.text-center.text-4xl.font-extrabold.mt-10= pagina 

    .mt-12.mx-auto.max-w-md  
        .bg-white.py-8.px-4.shadow
            form.space-y-4(method="POST" action="/auth/register")
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="nombre") Nombre
                    input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa nombre" type="text" name="nombre")
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Email
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa correo" type="email" name="email")
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") Contraseña
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa contraseña" type="password" name="password")
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="confirmPassword") Confirmar contraseña
                    input#confirmPassword.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa la misma contraseña" type="password" name="confirmPassword")
                
                div.flex.items-center.justify-between 
                    a.text-gray-400.text-xs(href="/auth/login") ¿Tienes cuenta? Inicia sesión
                    a.text-gray-400.text-xs(href="/auth/recovery") Recuperar contraseña

                    
                
                //para utilizar hover utilizaremos la forma clasica de html de agregar clases
                input(class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-3 rounded-xl border-gray-900" type="submit" value="Crear cuenta")
    